@model IEnumerable<SelectOnWeb.Models.tb_room>

@{
    ViewBag.Title = "主页";
}

<h2>主页</h2>

<p>
    @Html.ActionLink("新建", "Create")
</p>
<table class="table" style="font-size:20px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tables)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.after15min)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tables)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cur)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.after15min)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.no }) |
            @Html.ActionLink("重置","Reset",new { id=item.no})|
            @Html.ActionLink("详细", "Details", new { id=item.no }) |
            @Html.ActionLink("删除", "Delete", new { id=item.no })
        </td>
    </tr>
}

</table>
