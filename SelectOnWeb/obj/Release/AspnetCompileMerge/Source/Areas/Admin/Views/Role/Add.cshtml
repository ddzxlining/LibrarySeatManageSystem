@model SelectOnWeb.Areas.Admin.Models.AddRoleViewModel
@{
    ViewBag.Title = "添加";
}
<h2>添加角色</h2>
@using (Html.BeginForm("Add", "Role", FormMethod.Post, new { @class = "form-horizontal",role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" });
    <div class="form-group">
        <label class = "col-md-2 control-label" >角色名</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.roleName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="添加" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
