<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 图书馆座位管理系统管理中心</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("图书馆座位管理系统管理中心", "Index", "Home",null, new { @class = "navbar-brand" })               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("自习室管理", "Index", "Room")</li>
                    <li>@Html.ActionLink("学生管理", "Index", "Stu")</li>
                    <li>@Html.ActionLink("角色管理", "Index", "Role")</li>
                    <li>@Html.ActionLink("账户管理","Index","Account")</li>
                </ul>
                @Html.Action("LoginPartial", "Account",new { Area=""});
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 图书馆座位管理系统管理中心</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>